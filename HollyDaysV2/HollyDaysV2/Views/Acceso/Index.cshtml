
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}
    <nav class="navbar navbartop navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="#" style="color: white;">Inicio <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" style="color: white;">Politicas</a>
                </li>
            </ul>
        </div>
    </nav>

    <div id="d_principal" class="container">
        <div class="row">
            <div class="container">
                <img class='col-lg-8 col-sm-12' id="i_desconectate" src="~/Content/Resources/desconectate2.png" style="widows:100%">
            </div>
        </div>
        <div class="row">
            <div id="d_start" class="col-3 offset-5 my-3">
                <a id="a_start"><img id="i_start" src="~/Content/Resources/start boton.png"></a>
            </div>
        </div>
        <div class="row">
            <div id="d_form" class="col-lg-4 col-sm-12 my-3" style="display: none;">
                <div class="card" style="background-color:rgba(255, 255, 255, 0.5);">
                    <div class="card-body">
                        <form id="frmAccs">
                            <div class="form-group">
                                <label for="usuario">Email address</label>
                                <input type="email" class="form-control" id="usuario" name="usuario" aria-describedby="emailHelp" placeholder="Email">
                                <small id="emailHelp" class="form-text text-muted">El susuario es tu IdSharp.</small>
                            </div>
                            <div class="form-group">
                                <label for="contrasena">Password</label>
                                <input type="password" class="form-control" id="contrasena" name="contrasena" placeholder="Contraseña">
                            </div>
                            <div class="justify-content-center">
                                <input type="submit" class="btn btn-desconectate" value="Entrar" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


@section scripts{
    <script>

        $('#a_start').click(function(){
                $('#d_start').hide(500,function(){
                    $('#d_form').show(500);
                });
            
            });
        $(document).ready(function () {

            

            $('#frmAccs').submit(function (e) {
                e.preventDefault();

                url = "@Url.Content("~/Acceso/Entrar")"
                parametros = $(this).serialize();

                $.post(url, parametros, function (data) {
                    if (data == "1") {
                        document.location.href = "@Url.Content("~/")";
                    } else {
                        alert(data);
                    }
                });
            });
        });
    </script>
}

