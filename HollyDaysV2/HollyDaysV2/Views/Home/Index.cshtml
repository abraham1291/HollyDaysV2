</nav>

<div class="container">
    <div class="row mt-3 mb-5">
        <div class="col-lg-6">
            <div class="card">
                <divc class="card-header">
                    <strong><span style="font-size: x-large;">Datos de Vacaciones</span></strong>
                </divc>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <strong><label>Fecha Aniversario </label></strong>
                            <span>02/07</span><br />

                            <strong><label>Antigüedad</label></strong>
                            <span>1 año y 8 meses</span><br />

                            <strong><label>Dias por disfrutar</label></strong>
                            <span>10</span><br />
                        </div>
                        <div class="col-6">
                            <strong><label>Dias tomados</label></strong>
                            <span>6</span><br />

                            <strong><label>Periodo</label></strong>
                            <span>2019</span><br />

                            <strong><label>Caducan</label></strong>
                            <span>31/06</span><br />
                        </div>
                    </div>                    
                </div>
            </div>
        </div>
        <div class="col-lg-6"></div>
    </div>
    <div class="row mt-4">
        <div class="col-lg-6">
            <div class="row">
                <div class="input-group mb-3">
                    <select class="custom-select">
                        <option value="1">Vacaciones</option>
                        <option value="2">Paternidad</option>
                        <option value="3">Maternidad</option>
                        <option value="4">Con goze</option>
                        <option value="5">Sin goze</option>
                        <option value="6">Defuncion</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <Strong><span style="font-size:medium;">Solicitudes Hechas</span></Strong>
                <table class="table">
                    <thead style="background-color: #821c61; color: white;">
                        <tr>
                            <th scope="col">Id Solicitud</th>
                            <th scope="col">Solicitud</th>
                            <th scope="col">Fecha inicio</th>
                            <th scope="col">Fecha final</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>Con goze</td>
                            <td>06/04/2020</td>
                            <td>08/04/2020</td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>Vacaciones</td>
                            <td>16/04/2020</td>
                            <td>20/04/2020</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-lg-6">
            <img src="~/Content/Resources/imagen.png" alt="Alternate Text" align="right" style="width:50%"/>
        </div>
    </div>
</div>

